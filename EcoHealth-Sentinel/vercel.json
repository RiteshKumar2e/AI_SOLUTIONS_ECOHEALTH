{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    },
    {
      "src": "gateway/gateway.js",
      "use": "@vercel/node"
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "backend1/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/gateway/(.*)",
      "dest": "/gateway/gateway.js"
    },
    {
      "src": "/api/backend/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/api/ml/(.*)",
      "dest": "/backend1/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
