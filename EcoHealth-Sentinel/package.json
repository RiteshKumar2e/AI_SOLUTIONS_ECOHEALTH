{
  "name": "ecohealth-sentinel-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "gateway"
  ],
  "scripts": {
    "install-all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../gateway && npm install",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:gateway": "cd gateway && npm run dev",
    "build:frontend": "cd frontend && npm run build"
  }
}
